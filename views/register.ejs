<% include ./partials/head %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">

        <div class="box">
          <h2 class="title">Create new user</h2>
    
          <form action="/register" method="POST">
    
            <div class="field">
              <label class="label">Username</label>
              <div class="control">
                <input type="text" class="input" name="username" placeholder="new username" autofocus>
              </div>
            </div>
    
            <div class="field">
              <label class="label">Password</label>
              <div class="control">
                <input type="password" class="input" name="password" placeholder="new password">
              </div>
            </div>
    
            <div class="field is-grouped is-grouped-right">
              <div class="control">
                <button type="reset" class="button is-text">Reset</button>
              </div>
              <div class="control">
                <button type="submit" class="button is-primary">Create Account</button>
              </div>
            </div>
    
          </form>
    
    
        </div>

      </div>
    </div>
  </div>
</section>

<% include ./partials/footer %>